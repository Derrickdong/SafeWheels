<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.safewheels.ContactFragment">

    <RelativeLayout
        android:id="@+id/head_image"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="176dp"
            android:layout_height="119dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/id" />
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_image"
        android:id="@+id/lv_infos"/>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_infos"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#C00000"
        android:fontFamily="@font/roboto_medium"
        android:foregroundGravity="right"
        android:gravity="right"
        android:text="Update Emergency Contact"
        android:textColor="@color/quantum_white_100"
        android:textStyle="bold" />
</RelativeLayout>
